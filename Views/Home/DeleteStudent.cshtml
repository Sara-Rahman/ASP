@model School_Acoount_Management_System.ViewModel.StudentInfoVM
@{
    ViewData["Title"] = "DeleteStudent";
}

<h1>Delete Student</h1>

<div class="col-md-4">
    Student Name:@Model.StudentName <br />
    Student Class:@Model.Class <br />
    Student Section:@Model.Section <br />
    <br />
   
    <div class="alert alert-danger">
        Are you sure to delete this student?
        <form asp-action="DeleteStudent" asp-controller="Home" method="post">
            <input type="hidden" asp-for="StudentId" />
            <input type="submit" value="Yes Delete" />
        </form>

        <a asp-action="StudentList">No.Go Back</a><br />
    </div>
    <a class="btn btn-success" asp-action="UpdateStudent" asp-controller="Home" asp-route-id="@Model.StudentId">Update</a>

</div> <a class="btn btn-primary" asp-action="StudentList" asp-controller="Home"> Go Back To List</a>